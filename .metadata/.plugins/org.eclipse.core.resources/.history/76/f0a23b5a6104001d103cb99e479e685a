package com.qa.database;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import org.apache.logging.log4j.Logger;
import org.apache.logging.log4j.LogManager;

public class SQLConnector {

	Logger LOGGER = LogManager.getLogger();

	// Attributes
	private String localhost;
	private String user;
	private String password;

	// Constructor
	public SQLConnector(String user, String password) {
		this.localhost = "jdbc:mysql://localhost:3306/StoreDatabase";
		this.user = user;
		this.password = password;
	}

	public void getConnection() {
		SQLConnector useDB = new SQLConnector("root", "Apple.Bob1");
		try (Connection con = DriverManager.getConnection(localhost, user, password)) {
		} catch (SQLException e) {
			LOGGER.error("Unable to connect to SQL Database");
			e.printStackTrace();
	}
	
	}

}
